<div id="content-header">
  <%= image_tag("/images/library/library_small.png") %>
  <h1><%= "#{t('library_text')}"%></h1>
  <h3><%= "#{t('library_management')}"%></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="box">
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('manage_books')}", :controller=>'books', :action=>'index' %> </div>
      <div class="link-descr"><%= "#{t('manage_library_books')}"%></div>
    </div>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('search_book_text')}", :action=>'search_book' %> </div>
      <div class="link-descr"><%= "#{t('search_for_a_book_here')}"%></div>
    </div>
    <% if permitted_to? :return_book, :book_movement %>
      <div class="link-box">
        <div class="link-heading">  <%= link_to "#{t('return_book')}", :controller=>'book_movement' ,:action=>'return_book' %> </div>
        <div class="link-descr"><%= "#{t('manage_book_returns')}"%></div>
      </div>
    <% end %>
    <% if permitted_to? :direct_issue_book, :book_movement %>
      <div class="link-box">
        <div class="link-heading"><%= link_to "#{t('issue_books')}", :controller=>'book_movement' ,:action=>'direct_issue_book' %> </div>
        <div class="link-descr"><%= "#{t('issue_books_here')}"%></div>
      </div>
    <% end %>
    <% if permitted_to? :card_setting, :library %>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('library_setting_text')}", :controller=>'library' ,:action=>'card_setting' %>  </div>
      <div class="link-descr"><%= "#{t('initial_library_setting_for_courses')}"%></div>
    </div>
    <% end %>
    <% if permitted_to? :movement_log, :library %>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('movement_log_index')}", :controller=>'library' ,:action=>'movement_log' %>  </div>
      <div class="link-descr"><%= "#{t('issued_renewed_book_status')}"%></div>
    </div>
    <% end %>
    <% if permitted_to? :renewal, :book_movement %>
    <div class="link-box">
      <div class="link-heading"><%= link_to "#{t('book_renewal')}", :controller=>'book_movement' ,:action=>'renewal' %>  </div>
      <div class="link-descr"><%= "#{t('renew_books_here')}"%></div>
    </div>
    <% end %>
  </div>
</div>