<table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">
  <tr class="tr-head">
    <td>
      <%= "#{t('course_text')}"%>
    </td>
    <td>
      <%= "#{t('category')}"%>
    </td>
    <td>
      <%= "#{t('books_issuable')}"%>
    </td>
    <td>
      <%= "#{t('time_period')}"%><br/><%= "#{t('in_days')}" %>
    </td>
    <td>

    </td>
  </tr>
  <tr class="tr-blank"></tr>
  <% @card_setting.each do |card| %>
    <tr class="tr-<%= cycle('odd', 'even') %>">
      <td class="col-4">
        <%= card.course.course_name %>
      </td>
      <td class="col-1">
        <%= card.student_category.name unless card.student_category_id.nil? %>
      </td>
      <td class="col-1">
        <%= card.books_issueable %>
      </td>
      <td class="col-1">
        <%= card.time_period %>
      </td>
      <td class="col-1">
        <small>
          <%= link_to_remote "#{t('edit_text')}",  :url=>{:action=>'edit_card_setting', :id=>card.id} %> |
          <%= link_to_remote "#{t('delete_text')}",  :url=>{:action=>'delete_card_setting', :id=>card.id},:confirm=>"Are you sure want to delete the library card setting?" %>
        </small>
      </td>
    </tr>
  <% end  %>
  
  <tr class="add-new">
    <td class="col-4"></td>
    <td class="col-1"></td>
    <td class="col-1"></td>
    <td class="col-1"></td>
    <td class="col-1"><%= link_to_remote "#{t('add_new')}", {:url=>{:action=>'add_new_setting', :id=>@course.id}}, :class=>"add-link" %></td>
  </tr>
</table>
 

