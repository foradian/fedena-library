<div class="label-field-pair">
  <label for="user_name"><%= "#{t('name')}"%></label>
  <div class="text-input-bg">
    <%= text_field :library, :name, :value=>@user.full_name, :disabled=>true %>
    <%= hidden_field :issue, :user_id, :value=>@user.id %>
  </div>
</div>
<div class="label-field-pair">
  <label for="user_name"><%= "#{t('admission_no')}."%></label>
  <div class="text-input-bg">
    <%= text_field :library, :username, :value=>@user.username, :disabled=>true %>
  </div>
</div>
<br/>
<% count = 1 %>
<% unless @issueable.nil? %>
  <div class="name"><%= "#{t('no_of_books_can_be_taken')}"%></div><div class="val"><span>:</span><span class="cont"><%=  @issueable.books_issueable.to_s  %></span></div>
  <% count = @issueable.books_issueable - @in_hand_books.size  %>
<% end %>
<div class="name"><%= "#{t('books_taken')}"%></div><div class="val"><span>:</span><span class="cont"><%=  (@in_hand_books) ? @in_hand_books.size : 0 %></span></div>
<% if count <= 0 %>
  <p><%= "#{t('this_user_has_reached_the-maximum_limit_of_availing_books')}"%></p>
<% end %>
<div class="pack"></div>
<% @in_hand_books.each do |b| %>
  <div class="name"><%= "#{t('book_title')}"%></div><div class="val"><span>:</span><span class="cont"><%= b.book.title %></span></div>
  <div class="name"><%= "#{t('book_number')}"%></div><div class="val"><span>:</span><span class="cont"><%= b.book.book_number %></span></div>
  <div class="name"><%= "#{t('issue_date')}"%></div><div class="val"><span>:</span><span class="cont"><%= b.issue_date %></span></div>
  <div class="name"><%= "#{t('due_date')}"%></div><div class="val"><span>:</span><span class="cont"><%= b.due_date %></span></div>
  <div class="pack"></div>
<% end %>
<% due_date =( Date.today + @issueable.time_period unless @issueable.nil?) %>
<% due_date ||=  Date.today + 30 %>
<div class="label-field-pair">
  <label for="issue_date"><%= "#{t('issue_date')}"%></label>
  <div class="text-input-bg">
    <%= calendar_date_select_tag 'issue[issue_date]', I18n.l(Date.today,:format=>:default),:readonly=>true,:popup=>"force"%>
  </div>
</div>
<div class="label-field-pair">
  <label for="due_date"><%= "#{t('due_date')}"%></label>
  <div class="text-input-bg">
    <%= calendar_date_select_tag 'issue[due_date]', I18n.l(due_date,:format=>:default),:readonly=>true,:popup=>"force"%>
  </div>
</div>
