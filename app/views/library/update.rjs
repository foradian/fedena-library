if @error.nil?
  page.replace_html 'flash-box', :text => "<p class='flash-msg'>Library card settings updated successfully</p>"
	page.replace_html 'form-errors', :text => ''
  page.replace_html 'card_setting', :partial => 'library_card_setting'
  page << "Modalbox.hide();"
else
	page.replace_html 'form-errors', :partial => 'errors', :object => @setting
  page.visual_effect(:highlight, 'form-errors')
end

